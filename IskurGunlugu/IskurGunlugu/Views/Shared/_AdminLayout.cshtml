<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <nav class="navbar navbar-dark bg-danger navbar-expand-lg  col-12">
                <div class="container-fluid">
                    @Html.ActionLink("Admin Panel", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">

                            @if (User.Identity.IsAuthenticated)
                            {
                                @Html.ActionLink("Admin", "Index", "Admin", new { area = "" }, new { @class = "nav-link" })
                                @Html.ActionLink("Slider", "Slider", "Admin", new { area = "" }, new { @class = "nav-link" })
                                @Html.ActionLink("Kategoriler", "Category", "Admin", new { area = "" }, new { @class = "nav-link" })
                                @Html.ActionLink("Bloglar", "Blog", "Admin", new { area = "" }, new { @class = "nav-link" })

                                if (!User.IsInRole("User"))
                                {
                                @Html.ActionLink("Kullanıcılar", "Users", "Admin", new { area = "" }, new { @class = "nav-link" })
                                @Html.ActionLink("Roller", "Role", "Admin", new { area = "" }, new { @class = "nav-link" })
                                }
                                @Html.ActionLink("Web Site", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                                <a href="#" class="navr-link text-white">@User.Identity.Name</a>
                                 @Html.ActionLink("Logout", "Logout", "Admin", new { area = "" }, new { @class = "nav-link text-white" })
                                  }
                                 else
                                {
                                 @Html.ActionLink("Login", "Login","Admin", new { area = "" }, new { @class = "nav-link text-white" })
                                  }
                                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Web Site</p>
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>
