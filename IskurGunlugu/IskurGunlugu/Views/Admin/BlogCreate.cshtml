@model IskurGunlugu.Models.PagesModels.BlogCategoryModel

@{
    ViewBag.Title = "BlogCreate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>BlogCreate</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Blog</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="CategoryId" class="control-label col-md-2">Category</label>
            <div class="col-md-10">
                <div class="checkbox">
                    <select name="CategoryId" id="CategoryId" class="form-control">
                        @foreach (var category in Model.Category)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
            </div>
        </div> 
        <div class="form-group">
            @Html.LabelFor(model => model.SingleBlog.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.SingleBlog.Status)
                    @Html.ValidationMessageFor(model => model.SingleBlog.Status, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

       
       

        <div class="form-group">
            @Html.LabelFor(model => model.SingleBlog.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SingleBlog.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SingleBlog.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SingleBlog.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SingleBlog.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SingleBlog.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SingleBlog.Image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="Image" id="Image" class="form-control" />
                @Html.ValidationMessageFor(model => model.SingleBlog.Image, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success mt-3" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Blog","Admin")
</div>
